<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:left="3dp" android:top="3dp">
    <shape android:shape="rectangle"
           android:dither="true">
      <corners android:radius="1dp"/>
      <stroke android:color="@color/light_grey" android:width="3dp"/>

    </shape>
  </item>

  <item android:left="2dp" android:right="2dp" android:bottom="2dp" android:top="2dp">
    <shape android:shape="rectangle"
           android:dither="true">
      <corners android:radius="2dp"/>
      <stroke android:color="@color/greyish_white" android:width="2dp"/>
    </shape>
  </item>

  <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
    <shape android:shape="rectangle"
           android:dither="true">
      <corners android:radius="2dp" />
      <solid android:color="@color/greyish_white" />
    </shape>
  </item>
</layer-list>